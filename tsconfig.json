{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": [
      "es6",
      "es2017",
      "esnext"
    ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
, "tsconfig.json"  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}